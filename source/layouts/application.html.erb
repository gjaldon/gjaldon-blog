<html>
  <head>
    <meta charset="utf-8"/>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"/>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <title>
      <%= current_page.data.title %>
    </title>
    <%= stylesheet_link_tag "syntax" %>
    <%= stylesheet_link_tag "application" %>
  </head>

  <body class="<%= page_classes %>">
    <header class="navigation">
      <div class="navigation-wrapper">
        <div class="navigation-brand">
          <%= link_to data.site.title, "/", class: "logo" %>
        </div>
        <ul class="navigation-menu show">
          <% data.site.internal.each do |link| %>
            <li class="nav-link">
              <%= link_to link.title, link.path %>
            </li>
          <% end %>
          <% data.site.external.each do |link| %>
            <li class="nav-link">
              <%= link_to link.title, link.url, target: "_blank" %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="wrapper">
      <main>
        <%= yield %>
      </main>
    </div>

    <footer class="footer">
      <%= "Copyright by Gabriel Jaldon Â© #{Time.now.year}" %>
    </footer>
  </body>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-63049931-1', 'auto');
    ga('send', 'pageview');
  </script>
</html>
