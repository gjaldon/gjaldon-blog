!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "The Middleman"
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    %header{class: "centered-navigation"}
      .centered-navigation-wrapper
      %ul{class: "centered-navigation-menu show"}
        - data.site.internal.each do |link|
          %li{class: "nav-link"}
            %a{href: link.url}= link.title
        %li{class: "nav-link logo"}
          %a{href: "#", class: "logo"}= data.site.title
        - data.site.external.each do |link|
          %li{class: "nav-link"}
            %a{href: link.url}= link.title
    .wrapper
      %main
        = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"
